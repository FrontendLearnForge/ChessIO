<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#472F2B"
    tools:context=".TournamentCreate">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

    <LinearLayout
        android:id="@+id/tournamnet_create_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7E1B0"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <TextView
            android:id="@+id/date_tournam_label"
            style="@style/ProfileTextViewLabel"
            android:text="Дата и время начала*" />

        <TextView
            android:id="@+id/date_start_tournam"
            style="@style/TournamentDateTextView"
            android:hint="Выберите дату и время"/>

        <TextView
            android:id="@+id/time_tournam_label"
            style="@style/ProfileTextViewLabel"
            android:text="Дата и время конца*"/>

        <TextView
            android:id="@+id/date_end_tournam"
            style="@style/TournamentDateTextView"
            android:hint="Выберите дату и время"/>

        <TextView
            android:id="@+id/name_tournam_label"
            style="@style/ProfileTextViewLabel"
            android:text="Название*" />

    <EditText
        android:id="@+id/name_tournam"
        style="@style/ProfileEditText"
        android:hint="Введите текст"/>


    <TextView
        android:id="@+id/name_referee_tournam_label"
        style="@style/ProfileTextViewLabel"
        android:text="ФИО Судьи*"/>

    <EditText
        android:id="@+id/name_referee_tournam"
        style="@style/ProfileEditText"
        android:hint="Введите текст"/>

    <TextView
        android:id="@+id/address_tournam_label"
        style="@style/ProfileTextViewLabel"
        android:text="Адрес проведения*"/>

    <EditText
        android:id="@+id/address_tournam"
        style="@style/ProfileEditText"
        android:hint="Введите текст"/>

    <TextView
        android:id="@+id/type_tournam_label"
        style="@style/ProfileTextViewLabel"
        android:text="Тип турнира"/>

    <Spinner
        android:id="@+id/type_tournam"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:textColorHint="#000000"/>

    <TextView
        android:id="@+id/format_tournam_label"
        style="@style/ProfileTextViewLabel"
        android:text="Формат жеребьевки"/>

    <Spinner
        android:id="@+id/format_tournam"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:textColorHint="#000000" />

        <TextView
            android:id="@+id/number_tours_label"
            style="@style/ProfileTextViewLabel"
            android:text="Количество туров*"/>

        <EditText
            android:id="@+id/number_tours"
            style="@style/ProfileEditText"
            android:hint="Введите число"
            android:inputType="number"/>

    <Button
        android:id="@+id/button_create_tournam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#472F2B"
        android:text="Создать"
        android:textColor="#FFFFFF"/>

    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>