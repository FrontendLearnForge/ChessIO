<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFBF81"
    tools:context=".Statictic">

    <TextView
        android:id="@+id/listPlayers_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Список участников:"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/listPlayers_label"
        app:layout_constraintBottom_toBottomOf="parent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2,3"
                android:divider="#000000"
                android:showDividers="middle">

                <TableRow
                    android:padding="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24sp"
                        android:layout_weight="1"
                        android:text="№"
                        android:background="@drawable/table_cell_background"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:paddingStart="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24sp"
                        android:layout_weight="1"
                        android:text="Очки"
                        android:textColor="@color/black"
                        android:background="@drawable/table_cell_background"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingStart="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24sp"
                        android:layout_weight="1"
                        android:text="ФИО"
                        android:textColor="@color/black"
                        android:background="@drawable/table_cell_background"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingStart="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24sp"
                        android:layout_weight="1"
                        android:text="Команда"
                        android:textColor="@color/black"
                        android:background="@drawable/table_cell_background"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingStart="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24sp"
                        android:layout_weight="1"
                        android:text="Адрес"
                        android:textColor="@color/black"
                        android:background="@drawable/table_cell_background"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingStart="3dp"/>
                </TableRow>

                <!-- Здесь будут добавляться строки с данными игроков -->
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#472F2B"
        android:text="Назад"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/listPlayers_label"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666" />
</androidx.constraintlayout.widget.ConstraintLayout>