<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для TextViewLabel -->
    <style name="ProfileTextViewLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">11dp</item>
        <item name="android:paddingEnd">11dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:ems">11</item>
        <item name="android:fontFamily">@font/librebaskervilleregular</item>
    </style>

    <!-- Стиль для TextView (режим просмотра) -->
    <style name="ProfileTextView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <!-- Стиль для EditText (режим редактирования) -->
    <style name="ProfileEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:hint">Введите текст</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:ems">10</item>
    </style>

    <!-- Стиль для TextView (режим просмотра) -->
    <style name="TournamentDateTextView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <!-- Стиль для текста пунктов меню -->
    <style name="NavMenuTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#000000</item> <!-- Белый цвет текста -->
        <item name="android:textSize">16sp</item> <!-- Размер текста -->
    </style>

    <!-- Стиль для иконок меню -->
    <style name="NavMenuIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="colorControlNormal">#000000</item> <!-- Цвет иконок -->
    </style>

    <!-- Основной стиль для NavigationView -->
    <style name="NavMenuStyle" parent="Widget.Design.NavigationView">
        <item name="itemTextAppearance">@style/NavMenuTextAppearance</item>
        <item name="itemIconTint">#000000</item>
    </style>

    <style name="DeleteImageButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/x</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">#F44336</item>
    </style>

</resources>